Package: MEPmodeler
Type: Package
Version: 2.0.1
Title: Predict MicroExons in Plant Genomes
Authors@R: c(person("Huihui", "Yu", role = c("aut", "cre"), 
                    email = "yuhuihui2011@foxmail.com", 
                    comment = c(ORCID = "0000-0003-2725-1937")),
